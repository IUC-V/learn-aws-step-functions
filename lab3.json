{
  "Comment":"A Hello World example of the Amazon States Language using Pass states",
  "StartAt":"Lambda1",
  "States":{
    "Lambda1":{
      "Type":"Task",
      "Resource":"arn:aws:lambda:us-east-1:867098943567:function:hello",
      "Retry": [
        {
          "ErrorEquals": ["CustomError"],
          "IntervalSeconds": 1,
          "MaxAttempts": 2,
          "BackoffRate": 2.0
        },
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 30,
          "MaxAttempts": 2,
          "BackoffRate": 2.0
        },
        {
          "ErrorEquals": ["States.ALL"],
          "IntervalSeconds": 5,
          "MaxAttempts": 5,
          "BackoffRate": 2.0
        }
      ],
      "End":true
    }
  }
}
